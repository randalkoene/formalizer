{
    "tasks": [
        {
            "type": "shell",
            "label": "make with Makefile",
            "command": "/usr/bin/make",
            "args": [
                "-C",
                "${fileDirname}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}